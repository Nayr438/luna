var name = "samplepackage" // THIS SHOULD BE ALL LOWERCASE, NO SPACE
var desc = "Sample Package. Not much to it."
var version = "1.2.4"
var deps = ["kati"]
var tarball = `https://git.musl-libc.org/cgit/musl/snapshot/musl-${version}.tar.gz`

var build = [
    `cd musl-${version}`,
    "chmod +x ./configure",
    "CC=$CC CXX=$CXX CFLAGS=$CFLAGS LDFLAGS=$LDFLAGS ./configure",
    "make $MKFLAGS"
]
var install = [
    "make install DESTDIR=$DEST"
]